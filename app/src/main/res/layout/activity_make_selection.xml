<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeSelection">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your\n Favourite"
            android:textSize="50sp"
            android:layout_marginTop="80dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/grey"
            android:text="Select which contact details you want us to\n reset your password?"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:background="@color/Green"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <ImageView
                android:id="@+id/mobile_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/phonelink"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via SMS:"
                android:textSize="25sp"
                android:layout_toRightOf="@id/mobile_icon"
               android:layout_marginTop="35dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+255***:"
                android:textSize="25dp"
                android:layout_below="@id/mobile_title"
                android:layout_toRightOf="@id/mobile_icon"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"/>
            
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/flag_transparent"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="40dp"
            android:background="@color/ascent"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/email"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:id="@+id/icon_email"/>
            <TextView
                android:id="@+id/mailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via mail:"
                android:textSize="25sp"
                android:layout_toRightOf="@id/icon_email"
                android:layout_marginTop="35dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="supportteam@gmail.com"
                android:textColor="@color/black"
                android:layout_below="@id/mailId"
                android:layout_toRightOf="@id/icon_email"
                android:textSize="20sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/flag_transparent"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>